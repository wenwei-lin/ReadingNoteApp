<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ReadingNote.ViewModels"
             xmlns:models="clr-namespace:ReadingNote.Models"
             x:Class="ReadingNote.Pages.BookshelfPage"
             x:DataType="viewmodel:BookShelfPageViewModel"
             >
    
    <Grid Padding="16">
        <CollectionView ItemsSource="{Binding Books}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="3" VerticalItemSpacing="16" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Book">
                    <VerticalStackLayout Spacing="5">
                        <AbsoluteLayout>
                            <Image Source="{Binding Cover}" HeightRequest="160" />
                        
                        </AbsoluteLayout>
                        <!-- 使用LineBreakMode="TailTruncation"对超长部分截取 -->
                        <Label Text="{Binding Title}" HorizontalOptions="Center" FontSize="16" LineBreakMode="TailTruncation" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>